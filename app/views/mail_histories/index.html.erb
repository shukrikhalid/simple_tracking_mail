<p id="notice"><%= notice %></p>

<h1>Mail Histories</h1>

<table>
  <thead>
    <tr>
      <th>Mail</th>
      <th>Staff</th>
      <th>Status delivery</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mail_histories.each do |mail_history| %>
      <tr>
        <td><%= mail_history.mail %></td>
        <td><%= mail_history.staff %></td>
        <td><%= mail_history.status_delivery %></td>
        <td><%= link_to 'Show', mail_history %></td>
        <td><%= link_to 'Edit', edit_mail_history_path(mail_history) %></td>
        <td><%= link_to 'Destroy', mail_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


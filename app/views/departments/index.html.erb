<h1 align="center">Departments</h1>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.code %></td>
        <td><%= department.name %></td>
        <td><%= link_to 'Show', department, class: "btn btn-outline-success btn-sm"  %></td>
        <td><%= link_to 'Edit', edit_department_path(department), class: "btn btn-outline-info btn-sm"  %></td>
        <td><%= link_to 'Destroy', department, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Department', new_department_path, class: "btn btn-primary", method: :get %>

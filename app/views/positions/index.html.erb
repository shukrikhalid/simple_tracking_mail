<p id="notice"><%= notice %></p>

<h1 align="center">Positions</h1>

<table class="table table-bordered">
  <thead class="thead-light">
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @positions.each do |position| %>
      <tr>
        <td><%= position.code %></td>
        <td><%= position.name %></td>
        <td><%= link_to 'Show', position, class: "btn btn-outline-success btn-sm"  %></td>
        <td><%= link_to 'Edit', edit_position_path(position), class: "btn btn-outline-info btn-sm"  %></td>
        <td><%= link_to 'Destroy', position, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Position', new_position_path, class: "btn btn-primary", method: :get  %>
